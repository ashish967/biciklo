<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        app:cardElevation="@dimen/cardview_default_elevation">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/default_margin"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/tv_time"
                android:textSize="@dimen/text_size_large"
                tools:text="Sun, 23 feb 2015 at 2.11 PM"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_bill"
                android:textStyle="bold"
                tools:text="\u20b9 12"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_vehicle_number"
            tools:text="UP14-bl-1175"
            android:textAllCaps="true"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:textColor="@color/off_black"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/default_margin"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/bycycle"
                android:layout_height="30dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="5dp"
                android:src="@drawable/track_background"
                android:layerType="software" />

            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/bycycle"
                android:layout_height="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/default_margin"
                android:id="@+id/tv_start_station"
                tools:text="Shakti Peeth Temple"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:id="@+id/tv_end_station"
                tools:text="Shakti Peeth Temple"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
